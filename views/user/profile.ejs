<!DOCTYPE html>
<html lang="en">
<% include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/nav.ejs") %>
            <section id="page-title">
                <h1>
                    <%= user.username %>
                </h1>
                <img src="<%= user.profileImage %>" class="profile-pic" />
                <div class="user-actions">
                    <a href="/itineraries/new" class="control-button">Add itinerary</a>
                </div>
            </section>
            <main class="page-content">
                <h2>My itineraries</h2>
                <ul>
                    <% myItineraries.forEach(itinerary=> { %>
                        <li>
                            <a href="/itineraries/<%= itinerary._id %>">
                                <%= itinerary.destination %>
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </main>
    </body>

</html>